


@{
    ViewBag.Title = "UpdateCustomer";
    Layout = "~/Views/Shared/_ReckoningLayout.cshtml";
}

<link href="~/Content/Assets/Styles/AddEmployee.css" rel="stylesheet" />
<main>
    <div class="addEmployeeContainer">
        <h3>Müşteri Güncelle</h3>
        @if (ViewBag.Customer != null)
        {
            <form action="/PacketOrder/UpdateCustomerReq" method="post">
                <input type="hidden" name="id" value="@ViewBag.Customer.CustomerId" />
                <div>
                    <label>İsim Soyisim</label>
                    <input type="text" name="nameSurname" value="@ViewBag.Customer.NameSurname" />
                </div>
                <div>
                    <label>Phone Number</label>
                    <input type="text" name="phoneNumber" value="@ViewBag.Customer.PhoneNumber" />
                </div>
                <div>
                    <label>Adres</label>
                    <textarea name="adress" rows="3">@ViewBag.Customer.Adress</textarea>
                </div>

                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="Message">@ViewBag.Message</div>
                }
                <button type="submit">Güncelle</button>
            </form>
        }
    </div>
</main>




