
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <link href="~/Content/Assets/Styles/VerifyEmail.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Şifre Yenile</title>
    <link href="~/Content/Assets/Images/logos/pro.png" rel="shortcut icon" type="image/x-icon" />
</head>
<body>
    
    <div class="loginContainer">
        <div class="login">
            <img src="~/Content/Assets/Images/navbar-logo.svg" alt="Alternate Text" />
            <h1>Şifrenizi Güncelleyin</h1>
            <form action="/UserAuth/ChangePassword" method="post">
                @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    <div>
                        <label>Mesaj</label>
                        <input class="successMessage" required type="email" name="password1" disabled value="@ViewBag.SuccessMessage" />
                    </div>
                    <a href="/UserAuth/Login"> Giriş Ekranına Dön </a>
                }
                else
                {
                    if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div>
                            <label>Mesaj</label>
                            <input class="errorMessage" required type="email" name="password1" disabled value="@ViewBag.ErrorMessage" />
                        </div>
                        <a href="/UserAuth/Login"> Giriş Ekranına Dön </a>

                    }
                    else
                    {
                        <div>
                            <label>Yeni Şifre</label>
                            <input required maxlength="30" minlength="5" type="password" name="password1" value="" />
                        </div>
                        <div>
                            <label>Yeni Şifre Tekrar</label>
                            <input required maxlength="30" minlength="5" type="password" name="password2" value="" />
                            <input type="hidden" name="userId" value="@ViewBag.UserId" />
                        </div>
                        <button type="submit">Şifreyi Güncelle</button>
                    }

                }

            </form>

        </div>
    </div>


</body>
</html>
