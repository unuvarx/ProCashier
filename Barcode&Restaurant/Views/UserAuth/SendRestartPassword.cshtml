
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <link href="~/Content/Assets/Styles/VerifyEmail.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Başlantı Gönder</title>
    <link href="~/Content/Assets/Images/logos/pro.png" rel="shortcut icon" type="image/x-icon" />
</head>
<body>
   




    <div class="loginContainer">
        <div class="login">
            <img src="~/Content/Assets/Images/navbar-logo.svg" alt="Alternate Text" />
            <h1>Şifrenizi Güncelleyin</h1>
            <form action="/UserAuth/ResetPasswordReq" method="post">
                @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    <div>
                        <label>Email Adresiniz</label>
                        <input class="successMessage" required type="email" name="email" disabled value="@ViewBag.SuccessMessage" />
                    </div>
                    <button style="cursor: default;" disabled >Onayla</button>
                }
                else
                {
                    if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div>
                            <label>Email Adresiniz</label>
                            <input class="errorMessage" required type="email" name="email" disabled value="@ViewBag.ErrorMessage" />
                        </div>
                        <button style="cursor: default;" disabled >Onayla</button>

                    }
                    else
                    {
                        <div>
                            <label>Email Adresiniz</label>
                            <input required type="email" name="email" value="" />
                        </div>
                        <button type="submit">Bağlantı Gönder</button>
                    }

                }

            </form>

        </div>
    </div>
</body>
</html>
