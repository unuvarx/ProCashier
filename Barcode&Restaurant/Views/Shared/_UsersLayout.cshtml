<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



    <script src="~/Content/Assets/Scripts/all.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <link href="~/Content/Assets/Styles/UserNavbar.css" rel="stylesheet" />
    <link href="~/Content/Assets/Images/logos/pro.png" rel="shortcut icon" type="image/x-icon" />

</head>
<body>
    
    <nav class="navbar navbar-expand-xl navbar-toggleable-xl navbar-dark py-2">
        <div class="container">
            <a href="/Home/Index" class="navbarLogo">
                <img src="~/Content/Assets/Images/logos/procashier.png" alt="Alternate Text" />
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-xl-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-center">
                    <li>@Html.ActionLink("Paketler", "Packets", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Profil", "Profile", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Paket Satın Al", "BuyPacket", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Satın Alma Geçmişi", "PacketHistory", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Yazıcı Kurulumu", "Printer", "User", new { area = "" }, new { @class = "nav-link" })</li>

                </ul>
                <form action="/UserAuth/LogoutReq" method="post">
                    <button type="submit"><img src="~/Content/Assets/Images/logout.jpg" alt="Alternate Text" /></button>
                </form>
            </div>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()

        <footer id="contact" class="footer-container text-center text-white">
            <!-- Grid container -->
            <div class="container">
                <!-- Section: Links -->
                <div class="mt-5">
                    <!-- Grid row-->
                    <div class="row text-center d-flex justify-content-center pt-5">
                        <!-- Grid column -->
                        <div class="col-md-2">
                            <h6 class="text-uppercase font-weight-bold">
                                <a href="/User/Packets" class="text-white  text-decoration-none "> PAKETLER </a>
                            </h6>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-2">
                            <h6 class="text-uppercase font-weight-bold">
                                <a href="/User/Profile" class="text-white text-decoration-none">PROFİL</a>
                            </h6>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-2">
                            <h6 class="text-uppercase font-weight-bold">
                                <a href="/User/BuyPacket" class="text-white text-decoration-none">PAKET SATIN AL</a>
                            </h6>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-2">
                            <h6 class="text-uppercase font-weight-bold">
                                <a href="/User/PacketHistory" class="text-white text-decoration-none">SATIN ALMA GEÇMİŞİ</a>
                            </h6>
                        </div>
                        <div class="col-md-2">
                            <h6 class="text-uppercase font-weight-bold">
                                <a href="/User/Printer" class="text-white text-decoration-none">YAZICI KURULUMU</a>
                            </h6>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Grid row-->
                </div>
                <!-- Section: Links -->

                <hr class="my-5" />

                <!-- Section: Text -->
                <div class="mb-5">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-8">
                            <p>
                                ProCashier, 2024 yılında kurulmuş barkod ve adisyon uygulamalarını barındırdan ve pratik kullanımı ile işletmelerin işlerini kolaylaştırmak ve de hızlandırmak için kurulmuş bir otomasyon sistemidir.

                            </p>
                        </div>
                    </div>
                </div>
                <!-- Section: Text -->
                <!-- Section: Social -->
                <div class="text-center mb-5 contactInfo">
                    <div>
                        <i class="fa fa-phone"></i>
                        <span>+90 536 581 3398</span>
                    </div>
                    <div>
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        <span>procashiertr@gmail.com</span>
                    </div>
                </div>
                <!-- Section: Social -->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center p-3"
                 style="background-color: rgba(0, 0, 0, 0.2)">
                ©@DateTime.Now.Year  Copyright:
                <a class="text-white text-decoration-none" href="/Home/Index">procashier.com.tr</a>
                Tüm hakları saklıdır.
            </div>
            <!-- Copyright -->
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Content/Assets/Scripts/scripts.js"></script>

</body>
</html>
