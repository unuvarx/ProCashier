

@{
    ViewBag.Title = "Geçmiş Satışlar";
    Layout = "~/Views/Shared/_BarcodeLayout.cshtml";
}

<link href="~/Content/Assets/Styles/SalesHistory.css" rel="stylesheet" />


<main>
    <div class="preloader">
        <img src="~/Content/Assets/Images/logos/procashier.png" alt="Alternate Text" />
    </div>
    <div class="title">
        <span>Geçmiş Satışlar</span>
    </div>

    <div class="historyFilter p-2">
        <label>Ara</label>
        <input type="date" name="date" value="" />
    </div>

    <div class="table-wrapper p-2">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>Satış Detayına Git</th>
                    <th>Ürün Sayısı</th>
                    <th>Tutar (TL)</th>
                    <th>Kart (TL)</th>
                    <th>Nakit (TL)</th>
                    <th>Tarih</th>
                </tr>
            </thead>
            <tbody class="tableBody">
            </tbody>
        </table>
        <div class="pagination">
            <ul class="pagination-list">
                <!-- Sayfa numaraları buraya eklenir -->
            </ul>
        </div>
    </div>

    <!-- Sayfalama kontrolleri -->

</main>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/Assets/Scripts/SalesHistory.js"></script> 