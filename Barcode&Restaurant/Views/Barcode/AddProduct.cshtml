
@{
    ViewBag.Title = "Ürün Ekle";
    Layout = "~/Views/Shared/_BarcodeLayout.cshtml";
}
<link href="~/Content/Assets/Styles/AddProduct.css" rel="stylesheet" />
<main>
    <div class="title">
        <span>Ürün Ekle</span>
    </div>
    <div class="AddProductContainer">
        <form action="/Barcode/AddProductReq" method="post">
            <div>
                <label>Ürün Barkodu</label>
                <input autocomplete="off" required type="text" name="barcode" id="barcode" />
            </div>
            <div>
                <label>Ürün Adı</label>
                <input autocomplete="off" required type="text" name="name" id="name" />
            </div>
            <div>
                <label>Ürün Fiyatı</label>
                <input autocomplete="off" required type="text" name="price" id="price" placeholder="00.00" />
            </div>


            <div>
                <button type="submit" class="btn btn-info">Ürünü Ekle</button>
            </div>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }
        </form>
    </div>
</main>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/Assets/Scripts/AddProduct.js"></script>

