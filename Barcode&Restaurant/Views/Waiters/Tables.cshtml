
@{
    Layout = null;
}




<link href="~/Content/Assets/Styles/Tables.css" rel="stylesheet" />

<title>procashier - garson</title>

<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
<link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/Assets/Images/logos/pro.png" rel="shortcut icon" type="image/x-icon" />
<main>
    <nav class="waiterNav">
        <img src="~/Content/Assets/Images/logos/waiter.png" alt="Alternate Text" />
    </nav>
    <div class="tableCategories">
    </div>
    <div class="tablesContainer">
    </div>
    <div class="tableMenuContainer">
        <div class="menuProcess">
            <div class="title">
                <span><label class="tableName"></label> </span>
                <i class="fa fa-times close-icon" aria-hidden="true"></i>
            </div>
            <div class="content">

                <button class="change-table">
                    <i class="fa fa-repeat" aria-hidden="true"></i>
                    <span>MASAYI TAŞI</span>
                </button>
                <button class="concat-additions">
                    <i class="fa fa-clipboard" aria-hidden="true"></i>
                    <span>ADİSYONLARI BİRLEŞTİR</span>
                </button>

            </div>
        </div>
    </div>

    <div class="ChangeTableModal">
        <div class="menuProcess">
            <div class="title">
                <span><label class="tableName">  </label> </span>
                <label class="totalTitle">Toplam Tutar: <strong class="totalStrong">  </strong> </label>
                <i class="fa fa-times close-icon-change-table-modal" aria-hidden="true"></i>
            </div>
            <div class="selectTable">
                <div class="select" name="tables">

                </div>
                <button class="change-table">
                    <span>Değiştir</span>
                    <i class="fa fa-repeat" aria-hidden="true"></i>
                </button>

            </div>

        </div>
    </div>

    <div class="ConcatTablesModal">
        <div class="menuProcess">
            <div class="title">
                <span><label class="tableName">  </label> </span>
                <label class="totalTitle">Toplam Tutar: <strong class="totalStrong">  </strong> </label>
                <i class="fa fa-times close-icon-combine-table-modal" aria-hidden="true"></i>
            </div>
            <div class="content">
                <div class="concat">


                </div>
                <button class="concatBtn">
                    <span>Birleştir</span>
                    <i class="fa fa-clipboard" aria-hidden="true"></i>
                </button>
            </div>

        </div>
    </div>
</main>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/Assets/Scripts/WaiterTables.js"></script>