@model Barcode_Restaurant.Models.Users
@{
    ViewBag.Title = "ChangeUserPassword";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<link href="~/Content/Assets/Styles/AdminChangePassword.css" rel="stylesheet" />
<main>
   
    <div class="changeContainer">
        @if (Model != null)
            {
                <p> İşletme Adı-> <strong>@Model.Name  </strong></p>
                <p> Kullanıcı Adı-> <strong>@Model.Username</strong></p>
                
                }
        <form action="/Admin/ChangePasswordReq" method="post">

            <input type="hidden" name="id" value="@Model.UserId" />
            <input type="hidden" name="email" value="@Model.Email" />

            <div>
                <label>Şifre</label>
                <input type="password" name="password1" value="" />
            </div>
            <div>
                <label>Şifre - Tekrar</label>
                <input type="password" name="password2" value="" />
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <span class="error">@ViewBag.ErrorMessage</span>
            }
            else if (ViewBag.SuccessMessage != null)
            {

                <span class="success">@ViewBag.SuccessMessage</span>
            }
            <button type="submit">Şifreyi Güncelle</button>
        </form>
    </div>

</main>

