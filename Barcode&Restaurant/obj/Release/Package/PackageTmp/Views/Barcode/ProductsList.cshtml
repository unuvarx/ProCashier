@{
    ViewBag.Title = "Ürünler Listesi";
    Layout = "~/Views/Shared/_BarcodeLayout.cshtml";
}

<link href="~/Content/Assets/Styles/ProductsList.css" rel="stylesheet" />


<main>
    <div class="title">
        <span>Ürünler Listesi</span>
    </div>
    <div class="search">
        <div>
            <input type="text" name="search" placeholder="Ürün Barkodu ile Ara" value="" />
            <i class="fa fa-search"></i>
        </div>
        
    </div>
    <div class="table-wrapper p-2">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>Barkod</th>
                    <th>Ürün Adı</th>
                    <th>Fiyatı</th>
                    <th>Düzenle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody class="tableBody">
                <!-- Burada AJAX ile doldurulacak -->
            </tbody>
        </table>
        <div class="pagination">
            <ul class="pagination-list">
                <!-- Sayfa numaraları buraya eklenir -->
            </ul>
        </div>
    </div>
</main>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/Assets/Scripts/ProductsList.js"></script>
