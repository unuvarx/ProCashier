<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Content/Assets/Scripts/all.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="~/Content/Assets/Styles/BarcodeNavbar.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/Images/logos/pro.png" rel="shortcut icon" type="image/x-icon" />
</head>
<body>
    @if (ViewBag.WarningMessage != null)
    {
     
         <div class="warnMessage">
             <span>@ViewBag.WarningMessage </span>
             <a href="/User/BuyPacket">Paket Satın Al</a>
        </div>
    }

    <nav class="navbar navbar-expand-xl navbar-toggleable-xl navbar-dark py-2">
        <div class="container">
            <a href="/Reckoning/Tables" class="navbarLogo">
                <img src="~/Content/Assets/Images/logos/procashier.png" alt="Alternate Text" />
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-xl-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-center">
                    <li>@Html.ActionLink("Satış", "Tables", "Reckoning", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="demo-dropdown">
                        <span class="drop">Masa İşlemleri <i class="far fa-arrow-alt-circle-down"></i></span>
                        <ul class="reports reports2">
                            <li>@Html.ActionLink("Masa Ekle", "AddTable", "Reckoning", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Masa Bölgeleri", "TableCategories", "Reckoning", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Bölge Ekle", "AddTableCategories", "Reckoning", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Menü", "Menu", "Reckoning", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="demo-dropdown">
                        <span class="drop">Paket Sipariş <i class="far fa-arrow-alt-circle-down"></i></span>
                        <ul class="reports reports2">
                            <li>@Html.ActionLink("Sipariş Durumu ", "Orders", "PacketOrder", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Paket Siparişi Al ", "TakePacketOrder", "PacketOrder", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Kayıtlı Müşteriler", "Customers", "PacketOrder", new { area = "" }, new { @class = "nav-link" })</li>


                        </ul>
                    </li>
                    <li class="demo-dropdown">
                        <span class="drop">Kuryeler <i class="far fa-arrow-alt-circle-down"></i></span>
                        <ul class="reports reports2">
                            <li>@Html.ActionLink("Kurye Listesi ", "AllCarriers", "Carriers", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Kurye Ekle ", "AddCarrier", "Carriers", new { area = "" }, new { @class = "nav-link" })</li>

                        </ul>
                    </li>
                    <li class="demo-dropdown">
                        <span class="drop">Garsonlar <i class="far fa-arrow-alt-circle-down"></i></span>
                        <ul class="reports reports2">
                            <li>@Html.ActionLink("Garson Listesi ", "AllWaiters", "Waiters", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Garson Ekle ", "AddWaiter", "Waiters", new { area = "" }, new { @class = "nav-link" })</li>


                        </ul>
                    </li>
                    <li class="demo-dropdown">
                        <span class="drop">Cari İşlemler <i class="far fa-arrow-alt-circle-down"></i></span>
                        <ul class="reports">
                            <li>@Html.ActionLink("Günlük Rapor ", "Daily", "Report", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Tarihsel Rapor", "Historical", "Report", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
                    </li>
                </ul>
                <div class="return-btn">
                    <a href="/User/Packets"><img src="~/Content/Assets/Images/return.png" alt="Alternate Text" /></a>
                </div>
            </div>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Content/Assets/Scripts/UserIndex.js"></script>


</body>
</html>
