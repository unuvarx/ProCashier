<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



    <script src="~/Content/Assets/Scripts/all.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <link href="~/Content/Assets/Styles/BarcodeNavbar.css" rel="stylesheet" />
    <link href="~/Content/Assets/Images/logos/pro.png" rel="shortcut icon" type="image/x-icon" />

</head>
<body>
    @if (ViewBag.WarningMessage != null)
    {

        <div class="warnMessage">
            <span>@ViewBag.WarningMessage </span>
            <a href="/User/BuyPacket">Paket Satın Al</a>
        </div>
    }
    <nav class="navbar navbar-expand-xl navbar-toggleable-xl navbar-dark py-2">
        <div class="container">
            <a href="/Barcode/Selling" class="navbarLogo">
                <img src="~/Content/Assets/Images/logos/procashier.png" alt="Alternate Text" />
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-xl-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-center">
                    <li>@Html.ActionLink("Satış Yap", "Selling", "Barcode", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Ürün Ekle", "AddProduct", "Barcode", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Ürünler Listesi", "ProductsList", "Barcode", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Geçmiş Satışlar", "SalesHistory", "Barcode", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Günlük Ciro", "DailyTurnover", "Barcode", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                <div class="return-btn">
                    <a href="/User/Packets"><img src="~/Content/Assets/Images/return.png" alt="Alternate Text" /></a>
                </div>
            </div>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Content/Assets/Scripts/scripts.js"></script>

</body>
</html>
